<%= form_for event, url: event_path(event) do |f| %>
<div class="container">
  <div class="page-header">  
    <label><%= t('.event_name') %></label>
    <%= f.text_field :name %>
    <label><%= t('.place') %></label>
    <%= f.text_field :location %>
    <label><%= t('.date') %></label>
    <%= f.text_field :date, class: 'datepicker' %>
    <label><%= t('.time') %></label>
    <%= f.text_field :time, class: 'time' %>
    <label><%= t('.organizer') %></label>
    <%= f.text_field :organizer %>
    <label><%= t('.contact') %></label>
    <%= f.text_field :contact %>
    <label><%= t('.description') %></label>
    <%= f.text_area :description, class: 'areamail'%>
    <br>
    <%= f.submit submit %>
  </div>
</div>
<% end %>

<script type="text/javascript">
 startDate = new Date();
 endDate = (new Date())
 endDate.setDate(startDate.getDate()+180);
 
 $('.datepicker').datepicker(
    { 
      startDate: startDate,
      endDate: endDate,
      language: 'es',
      format: 'dd/mm/yyyy',
      autoclose: true
    }
  );

  $('.time').inputmask('h:s t', {autoUnmask: true, placeholder: " "});
</script>
