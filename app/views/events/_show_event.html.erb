<% if @current_events.size > 0 %>
  <% if @current_events.first == event %>
    <div class="first">
      <div class="two datetime">
        <span class="month"><%= localize_month event.date %></span><br>
        <span class="day"><%= event.date.strftime("%e") %></span><br>
        <span class="weekday"><%= localize_weekday event.date %></span><br>
        <span class="time"><%= localize_time event.date %></span><br>
      </div>
      <div class="nine main-data">
        <span class="title"><%= link_to event.name, event_path(event) %></span><br>
        <%= image_tag "pin.png", id: "maker", align: "left" %>
        <span class="location"><%= event.location %></span><br>
        <span class="organizer"><%= t('.organizer', organize: event.organizer) %></span><br><br>
        <span class="description">
          <%= truncate event.description, length: 350 %>
          <%= link_to t('.edit_event'), edit_event_path(event) %>
        </span>
      </div>
    </div>
  <% else %>
    <div class="second five-half">
      <div class="one-half datetime">
        <span class="month"><%= localize_month event.date %></span><br>
        <span class="day"><%= event.date.strftime("%e") %></span><br>
        <span class="weekday"><%= localize_weekday event.date %></span><br>
        <span class="time"><%= localize_time event.date %></span><br>
      </div>
      <div class="four main-data">
        <span class="title"><%= link_to event.name, event_path(event) %></span><br>
        <%= image_tag "pin.png", id: "maker", align: "left" %>
        <span class="location"><%= event.location %></span><br>
        <span class="organizer"><%= t('.organizer', organize: event.organizer) %></span><br><br>
        <span class="description">
          <%= truncate event.description, length: 150 %>
          <%= display_edit_event_link event %>
        </span>
      </div>
    </div>
  <% end %>
<% else %>
  <h4><%= t('.not_upcoming_events') %></h4>
<% end %>