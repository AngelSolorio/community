<% (event.date <= DateTime.now) ? (past = true) : (@current_events.first == event ? (first = true) : (first = false)) %>
<div id="event_<%= event.id %>" class="<%= past ? "third second four-half" : (first ? "first" : "second four-half")%>">
  <div class="<%= first ? "one-3quarters" : "one-half" %> datetime">
    <div class="month"><%= localize_month(event.date).upcase %></div>
    <div class="day"><%= event.date.strftime("%e") %></div>
    <div class="weekday"><%= localize_weekday event.date %></div>
    <div class="time"><%= localize_time event.date if !past %></div>
  </div>
  <div class="<%= first ? "seven" : "three-custom" %> main-data">
    <%= display_edit_event_link event if first %>
    <span class="title"><%= link_to (truncate event.name, length: first ? 25 : 15), event_path(event) %></span><br>
    <span class="location">
      <%= image_tag "pin.png", id: "maker", align: "left", size: "25x38" %>
      <%= truncate event.location, length: first ? 80 : 30 %><br>
      <%= truncate event.address, length: first ? 80 : 30 %></span><br>
    <span class="organizer"><%= t('.organizer', organize: truncate(event.organizer, length: first ? 25 : 10)) %></span><br>
    <% if !past %>
      <div class="description">
        <%= truncate event.description, length: first ? 300 : 170 %>
        <%= display_edit_event_link event if !first %>
      </div>
    <% end %>
  </div>
</div>