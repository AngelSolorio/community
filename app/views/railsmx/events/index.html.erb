<% title t('.events') %>
<div class="twelve content">
  <%= display_notice %>
  <sidebar class="blog three">
    <h4><%= t('.blog') %></h4>
    <div class="sidebar-blog">
      <%= t('.not_content') %>
    </div>
  </sidebar>
  <div class="events nine">
    <h1>
      <%= t('.events') %>
      <%= display_create_event_link %>
    </h1>
    <p><%= t('.text_current_events') %></p>

    <div class="event-section current">
      <%= !@current_events.empty? ? (render @current_events) : t('.not_upcoming_events') %>
    </div>

    <h2><%= t('.recent_events') %></h2>
    <p><%= t('.text_past_events') %></p>
    
    <div class="event-section past">  
      <%= !@past_events.empty? ? (render @past_events) : t('.not_recent_events') %>
    </div>
  </div>
</div>

<script>
  document.addEventListener('page:change', function(){
    new App.Utilities.Form
  });

  $(function(){
    new App.Utilities.Form
  });
</script>