          <a class="brand" href="#"><br></a>
          <div class="navbar-content">
            <ul class="nav ">
              <li>
              <%=link_to "Home", root_path %>
              </li>
              <li>
              <%=link_to "Blog", ('#')%>
              </li>
              <li>
              <%=link_to "Comunidad", ('#')%>
              </li>
              <li>
              <%=link_to "Eventos", new_event_path %>
              </li>
